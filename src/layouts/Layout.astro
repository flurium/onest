---
import "@fontsource-variable/onest"

interface Props {
  title: string
  description: string
}
const { title, description } = Astro.props
const url = Astro.url.href
const lang = "en"
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="Onest Remake by Flurium" />
    <meta property="og:url" content={url} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://onest.flurium.com/og.png" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content={lang} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Analytics -->
    <script
      is:inline
      async
      src="https://eu.umami.is/script.js"
      data-website-id="e4b0295f-4e46-40e4-99b4-ef07d0849f48"></script>
  </head>
  <body class="bg-gray-100">
    <header class="flex flex-col md:flex-row gap-6 justify-between p-6 items-center">
      <nav class="text-blue-500 flex gap-4 font-medium">
        <a href="https://github.com/flurium/onest" target="_blank">GitHub</a>
        <a href="https://www.flurium.com/#contact" target="_blank">Hire agency</a>
      </nav>

      <a
        href="https://fonts.google.com/specimen/Onest"
        target="_blank"
        class="order-first w-full md:w-fit md:order-none py-3 px-6
        rounded-lg bg-black inline-block text-white font-medium"
      >
        Donwload font â†“
      </a>
    </header>

    <main>
      <slot />
    </main>

    <footer class="py-20"></footer>
  </body>
</html>

<style is:global>
  *,
  *:focus {
    outline: none !important;
  }
</style>
